<core:View

	xmlns:core="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
	height="100%"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	controllerName="MyUIWebApp.src.pages.dashboard.DashBoard">

	<Page
		backgroundDesign="Transparent"
		class="sapUiNoContentPadding"
		showHeader="false"
		id="dashBoardPage">
        <content>
            <layout:VerticalLayout class="sapUiResponsiveMargin">
                <Title
					titleStyle="H2"
					text="{i18n>Commom.Home}"
					class=""/>

                <layout:HorizontalLayout allowWrapping="true">
                    <GenericTile
                        id="firstTile"
                    	frameType="TwoByOne"
						press="onNavRoute"
						app:route="drafts"
						class="shodow sapUiTinyMarginEnd sapUiTinyMarginBottom"
						header="Header 1">
                        <TileContent footer="Footer 1">
                            <content>
                                <NumericContent
									icon="sap-icon://pending"
									value="150"
									indicator="None" />
                            </content>
                        </TileContent>
                        <TileContent footer="Footer 2">
                            <content>
                                <Text text="Second Content" />
                            </content>
                        </TileContent>
                    </GenericTile>
                    <GenericTile
                        id="secondTile"
                    	frameType="TwoByOne"
						press="onNavRoute"
						app:route="drafts"
						class="shodow sapUiTinyMarginEnd sapUiTinyMarginBottom"
						header="Header 1">
                        <TileContent footer="Footer 1">
                            <content>
                                <NumericContent
									icon="sap-icon://pending"
									value="150"
									indicator="None" />
                            </content>
                        </TileContent>
                        <TileContent footer="Footer 2">
                            <content>
                                <Text text="Second Content" />
                            </content>
                        </TileContent>
                    </GenericTile>
                    <Button
                            id="changePage"
                            text="Mudar de PÃ¡gina"
                            press="onChange"
                            type="Navigation"
                            class="sapUiSmallMargin">
                        	<layoutData>
									<FlexItemData growFactor="1" minWidth="100%" />
							</layoutData>
                    </Button>
                </layout:HorizontalLayout>
            </layout:VerticalLayout>
        </content>
	</Page>
</core:View>
